<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.controllers.UserBooksController">
   <children>
      <Button layoutX="325.0" layoutY="361.0" mnemonicParsing="false" onAction="#deleteButtonClicked" text="Delete" />
      <TableView fx:id="table" layoutY="33.0" prefHeight="313.0" prefWidth="401.0">
        <columns>
          <TableColumn prefWidth="193.0" text="Author">
            <cellValueFactory><PropertyValueFactory property="author" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn prefWidth="193.0" text="Title">
            <cellValueFactory><PropertyValueFactory property="title" />
            </cellValueFactory>
        </TableColumn>
        </columns>
      </TableView>
      <Button layoutX="272.0" layoutY="361.0" mnemonicParsing="false" onAction="#editButtonClicked" text="Edit" />
      <Button layoutX="180.0" layoutY="361.0" mnemonicParsing="false" onAction="#descriptionButtonClicked" text="Description" />
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="7.0" layoutY="4.0" prefHeight="20.0" prefWidth="387.0" textFill="#fc0202" AnchorPane.topAnchor="8.0">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Button layoutX="32.0" layoutY="361.0" mnemonicParsing="false" onAction="#backToMainMenuClicked" text="Back" />
   </children>
</AnchorPane>
